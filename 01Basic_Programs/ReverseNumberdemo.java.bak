class ReverseNumberdemo 
{
	public static void main(String[] args) 
	{
		System.out.println("Hello World!");
		int n = 1234;
		int r =0;
		int m = 0;
		while (n!=0)
		{
			r = n % 10;

System.out.println(r);
			m = m * 10 +r;

			System.out.println(m);

			n = n/10;
System.out.println(n);

		}
         System.out.println(m);
	}
}
